datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String // e.g., 'admin', 'manager', 'employee'
}

model Item {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int
  category    String?
  sales       SaleItem[]
  purchases   PurchaseItem[]
  inventory   Inventory? // Defined as optional here
}

model Sale {
  id          Int        @id @default(autoincrement())
  saleDate    DateTime   @default(now())
  customer    String
  totalAmount Float
  items       SaleItem[]
}

model Purchase {
  id           Int            @id @default(autoincrement())
  purchaseDate DateTime       @default(now())
  supplier     String
  totalAmount  Float
  items        PurchaseItem[]
}

model Inventory {
  itemId Int  @id
  stock  Int
  item   Item @relation(fields: [itemId], references: [id])
}

model SaleItem {
  id     Int  @id @default(autoincrement())
  saleId Int
  itemId Int
  sale   Sale @relation(fields: [saleId], references: [id])
  item   Item @relation(fields: [itemId], references: [id])
}

model PurchaseItem {
  id         Int      @id @default(autoincrement())
  purchaseId Int
  itemId     Int
  purchase   Purchase @relation(fields: [purchaseId], references: [id])
  item       Item     @relation(fields: [itemId], references: [id])
}
