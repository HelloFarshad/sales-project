{
  "compilerOptions": {
    "target": "ESNext",                     // Specify ECMAScript target version (e.g., "ES6", "ESNext")
    "module": "CommonJS",                   // Specify module code generation (use "CommonJS" for Node.js)
    "moduleResolution": "node",              // Use Node.js module resolution strategy
    "esModuleInterop": true,                 // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "strict": true,                          // Enable all strict type-checking options
    "outDir": "./dist",                      // Redirect output structure to the directory
    "rootDir": "./api/src"                  // Specify the root directory of input files
  },
  "include": [
    "api/src/**/*"                           // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules"                          // Exclude node_modules
  ]
}